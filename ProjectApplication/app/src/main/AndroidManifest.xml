<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chuak.projectapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/android_learner"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/android_learner"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>

        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".TutorialPlayerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Quiz1Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HighestScoreActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Quiz2Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Quiz3Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Quiz4Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NotesViewingActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>